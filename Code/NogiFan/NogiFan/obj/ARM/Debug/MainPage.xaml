<Page x:ConnectionId='1'
    x:Class="NogiFan.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NogiFan"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:data="using:NogiFan"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <MediaElement x:ConnectionId='2' AutoPlay="False" Source="Assets/BGM1.mp3" Name="BGM"                            >
        </MediaElement>
        <ListView x:ConnectionId='3' Grid.Column="0" IsItemClickEnabled="True"                               >
            <Grid x:ConnectionId='5' x:Name="MemberPage">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <SymbolIcon Grid.Column="0" Symbol="People"/>
                <TextBlock x:ConnectionId='18' Grid.Column="1"                             FontSize="36"/>
            </Grid>
            <Grid x:ConnectionId='6' x:Name="SongPage">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <SymbolIcon Grid.Column="0" Symbol="MusicInfo"/>
                <TextBlock x:ConnectionId='17' Grid.Column="1"                           FontSize="36"/>
            </Grid>
            <Grid x:ConnectionId='7' x:Name="BlogPage">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <SymbolIcon Grid.Column="0" Symbol="Page"/>
                <TextBlock x:ConnectionId='16' Grid.Column="1"                           FontSize="36"/>
            </Grid>
            <Grid x:ConnectionId='8' x:Name="OshimenPage">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <SymbolIcon Grid.Column="0" Symbol="Like"/>
                <TextBlock x:ConnectionId='15' Grid.Column="1"                              FontSize="36"/>
            </Grid>
            <Grid x:ConnectionId='9' x:Name="NewsPage">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <SymbolIcon Grid.Column="0" Symbol="Remote"/>
                <TextBlock x:ConnectionId='14' Grid.Column="1"                           FontSize="36"/>
            </Grid>
            <Grid x:ConnectionId='10' x:Name="ShopPage">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <SymbolIcon Grid.Column="0" Symbol="Shop"/>
                <TextBlock x:ConnectionId='13' Grid.Column="1"                           FontSize="24"/>
            </Grid>
            <Grid x:ConnectionId='11' x:Name="HandPage">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <SymbolIcon Grid.Column="0" Symbol="List"/>
                <TextBlock x:ConnectionId='12' Grid.Column="1"                           FontSize="36"/>
            </Grid>
        </ListView>
        <Grid Grid.Column="1" Margin="10,0,0,0">
            <Frame x:ConnectionId='4' x:Name="To"/>
        </Grid>
    </Grid>
    
    <Page.BottomAppBar>
        <CommandBar>
            <AppBarButton x:ConnectionId='19' Icon="Play" Label="Play"                              x:Name="play"/>
            <AppBarButton x:ConnectionId='20' Icon="Next" Label="Next"                              x:Name="Next"/>
            <AppBarButton x:ConnectionId='21' Icon="Refresh"                                                      />
            <AppBarButton x:ConnectionId='22' Icon="WebCam"                                                            />
            <AppBarButton />
        </CommandBar>
    </Page.BottomAppBar>
</Page>

